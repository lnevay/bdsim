include options.gmad
!include fodo.gmad;

d1: drift, l=0.1*m;

l1: line=(d1);
use, period=l1;

option, ngenerate=1000;


emitX     = 5e-9;
emitY     = 5e-9;
betX      = 0.6;
betY      = 0.6;
alfX      = -1.0;
alfY      = 1.0;

beam, particle              = "e-",
      energy                = 1.0*GeV,
      distrType             = "halo",
      betx                  = betX,
      bety                  = betY,
      alfx                  = alfX,
      alfy                  = alfY,
      emitx                 = emitX,
      emity                 = emitY,
      haloNSigmaXInner      = 5,
      haloNSigmaXOuter      = 40,
      haloNSigmaYInner      = 5,
      haloNSigmaYOuter      = 40,
      haloPSWeightParameter = 1,
      haloPSWeightFunction  = "exp",


      haloXCutInner         = 0,
      haloYCutInner         = 0;
